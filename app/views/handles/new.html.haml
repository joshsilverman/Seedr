= render "progress", active: 0

.handles-new
  .form-well.well.span5.offset3
    = form_for @handle, :html => { :class => 'form-horizontal' } do |f|
      .control-group
        = f.label :name, :class => 'control-label'
        .controls
          = f.text_field :name, :class => 'text_field'
      .control-group
        = f.label :topic, :class => 'control-label'
        .controls
          = f.text_field :topic, :class => 'text_field'
          %p
            %i
              %small This will autopopulate the description

      = f.fields_for :decks do |ff|
        .control-group
          = ff.label "Quizlet Id", :class => 'control-label'
          .controls
            = ff.text_field :quizlet_id, :class => 'quizlet_id'

      .form-actions
        = f.submit nil, :class => 'btn btn-primary btn-large'
        = link_to t('.cancel', :default => t("helpers.links.cancel")),
          handles_path, :class => 'btn btn-large'