- model_class = Deck
%ul.breadcrumb
  %li
    = link_to @deck.handle.name, edit_handle_path(@deck.handle)
    %span.divider /
  %li
    = link_to @deck.title, edit_deck_path(@deck)

%br

.row
  .span6.ungrouped_cards_cont
    .well.ungrouped_cards
      %h3 Ungrouped Cards:
      .cards.selectable
        - @cards.each do |card|
          .card.well.small.active{:card_id => card.id}
            %span move
            = card.front
            |
            = card.back
            /= link_to 'Show', card
            /= link_to 'Edit', edit_card_path(card)
            /= link_to 'Destroy', card, confirm: 'Are you sure?', method: :delete

  .span6.groups
    - @groups.each do |i, cards|
      - group = Group.find i
      .well.group.old{:group_id => i, :style => "height:20px;"}
        %h3
          %span
            %i.icon-resize-vertical
            = best_in_place group, :name, :activator => ".group[group_id=#{i}] .rename"
            =# group.name

          .btn-toolbar
            .btn-group
              %a.btn.btn-small.rename Rename
              = link_to t('.edit', :default => t("helpers.links.edit")),
                edit_group_path(i), :class => 'btn btn-small'                
              = link_to t('.destroy', :default => t("helpers.links.destroy")),                                 
                group_path(i),                                                                            
                :method => 'delete',                                                                           
                :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                :class => 'btn btn-small btn-danger'

        .cards{:style => "display:none;"}
          - cards.each do |card|
            .card.well.small{:card_id => card.id}
              = card.front
              |
              = card.back
              /= link_to 'Show', card
              /= link_to 'Edit', edit_card_path(card)
              /= link_to 'Destroy', card, confirm: 'Are you sure?', method: :delete

    .well.group.new{:group_id => '', :sytle => "height:20px;"}
      %h3
        %span
          %i.icon-resize-vertical
          %span New Group
      .cards{:style => "display:none;"}

    #sample_group{:style => 'display:none;'}
      .well.group{:group_id => ''}
        %h3
          %span
            %i.icon-resize-vertical
            %span New Group

        .cards{:style => "display:none;"}

    #sample_toolbar{:style => 'display:none;'}
      .btn-toolbar
        .btn-group
          %a.btn.btn-small.rename Rename
          = link_to t('.edit', :default => t("helpers.links.edit")),
            '#', :class => 'edit btn btn-small'                
          = link_to t('.destroy', :default => t("helpers.links.destroy")),                                 
            "#",                                                                            
            :method => 'delete',                                                                           
            :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                :class => 'btn btn-small btn-danger destroy'
