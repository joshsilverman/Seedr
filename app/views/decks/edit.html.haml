- model_class = Deck
.page-header
  %h1= t '.title', :default => t('helpers.titles.edit', :model => model_class.model_name.human,
      :default => "Edit #{model_class.model_name.human}")                                     
= render :partial => 'form'

%br

.row
  .span6.ungrouped_cards_cont
    .well.ungrouped_cards
      %h3 Ungrouped Cards:
      .cards
        - @cards.each do |card|
          .card.well.small.active{:card_id => card.id}
            = card.front
            |
            = card.back
            /= link_to 'Show', card
            /= link_to 'Edit', edit_card_path(card)
            /= link_to 'Destroy', card, confirm: 'Are you sure?', method: :delete

  .span6.groups
    - @groups.each do |i, cards|
      - group = Group.find i
      .well.group{:group_id => i, :style => "height:20px;"}
        %h3
          %span
            %i.icon-resize-vertical
            = "Group #{i}: #{group.name}"

          .btn-toolbar
            .btn-group
              = link_to t('.edit', :default => t("helpers.links.edit")),
                edit_group_path(i), :class => 'btn'                
              = link_to t('.destroy', :default => t("helpers.links.destroy")),                                 
                group_path(i),                                                                            
                :method => 'delete',                                                                           
                :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                :class => 'btn btn-danger'
        .cards{:style => "display:none;"}
          - cards.each do |card|
            .card.well.small{:card_id => card.id}
              = card.front
              |
              = card.back
              /= link_to 'Show', card
              /= link_to 'Edit', edit_card_path(card)
              /= link_to 'Destroy', card, confirm: 'Are you sure?', method: :delete

    .well.group{:group_id => '', :sytle => "height:20px;"}
      %h3
        %span
          %i.icon-resize-vertical
          = "Unnamed group"

        .btn-toolbar
          .btn-group
            = link_to t('.edit', :default => t("helpers.links.edit")),
              edit_group_path(@group), :class => 'btn'                
            = link_to t('.destroy', :default => t("helpers.links.destroy")),                                 
              group_path(@group),                                                                            
              :method => 'delete',                                                                           
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger'

    #sample_group{:style => 'display:none;'}
      .well.group{:group_id => ''}
        .btn-toolbar
          .btn-group
            = link_to t('.edit', :default => t("helpers.links.edit")),
              edit_group_path(@group), :class => 'btn'                
            = link_to t('.destroy', :default => t("helpers.links.destroy")),                                 
              group_path(@group),                                                                            
              :method => 'delete',                                                                           
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger'